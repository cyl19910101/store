extends layout
block content
    .container-fluid
        .row
            .col-lg-12
                .carousel.slide#carousel-example-generic
                    ol.carousel-indicators
                        li.active(data-target="#carousel-example-generic" data-slide-to="0")
                        li.active(data-target="#carousel-example-generic" data-slide-to="1")
                        li.active(data-target="#carousel-example-generic" data-slide-to="2")
                    .carousel-inner(role="listbox")
                        .item.active
                            img(src="/images/aptamilProfutura3.jpg" alt="图片缺失")
                        .item
                            img(src="/images/nutellafingercake.jpg" alt="图片缺失")
                        .item
                            img(src="/images/menevit90.jpg" alt="图片缺失")
                    a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev')
                        span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                        span.sr-only Previous
                    a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next')
                        span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                        span.sr-only Next
block javascript
    script(data-main="javascripts/product" src="javascripts/lib/require.js")
